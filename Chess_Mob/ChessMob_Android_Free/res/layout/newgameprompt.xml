<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:isScrollContainer="true"
    android:background="@drawable/background" >

 <Button
     android:id="@+id/cancel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBottom="@+id/okbutton"
     android:layout_alignParentRight="true"
     android:layout_marginRight="54dp"
     android:background="@drawable/roundedcorners"
     android:text="@string/no"
     android:textColor="#FFAA00" />

 <TextView
     android:id="@+id/areyousureyesorno"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/areyousure"
     android:gravity="center_horizontal"
     android:text="@string/areyousureyesornotext"
     android:textColor="#FFAA00"
     android:textSize="20sp" />

 <TextView
     android:id="@+id/areyousure"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_marginTop="28dp"
     android:gravity="center_horizontal"
     android:text="@string/areyousuretext"
     android:textColor="#FFAA00"
     android:textSize="20sp" />

 <Button
     android:id="@+id/okbutton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/areyousureyesorno"
     android:layout_marginLeft="45dp"
     android:layout_marginTop="23dp"
     android:background="@drawable/roundedcorners"
     android:text="@string/yes"
     android:textColor="#FFAA00" />

</RelativeLayout>